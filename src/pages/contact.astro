---
// 1. Import the base layout
import BaseLayout from '@/layouts/BaseLayout.astro'; // Adjust path if needed

const pageTitle = "Contact Us";

// --- PLACEHOLDERS ---
// TODO: Replace with your actual Facebook Page URL
const facebookPageUrl = "https://www.facebook.com/meronepalkpu?mibextid=wwXIfr&rdid=zVcMLYW62DOtUPzL&share_url=https%3A%2F%2Fwww.facebook.com%2Fshare%2F1VKKx5sYnE%2F%3Fmibextid%3DwwXIfr";
// TODO: Replace with your actual WhatsApp Number (including country code, no + or spaces)
const whatsappNumber = "+977 985-5083365"; // Example format for Nepal
// --- END PLACEHOLDERS ---

const whatsappLink = `https://wa.me/${whatsappNumber}`;
---
{/* 2. Use the layout component */}
<BaseLayout> {/* You might pass title={pageTitle} if your layout supports it */}

  <div class="container mx-auto px-4 py-10 md:py-16 max-w-3xl"> {/* Centered, constrained width */}
    <h1 class="text-3xl md:text-4xl font-bold mb-6 text-center text-gray-800">{pageTitle}</h1>

    <p class="text-lg text-gray-700 mb-10 text-center leading-relaxed">
      We'd love to hear from you! Whether you have questions, feedback, suggestions, or perhaps an interesting story or article idea focused on Nepal you'd like to share, please don't hesitate to reach out.
    </p>

    {/* Contact Methods Section */}
    <div class="space-y-8">

      {/* Facebook Contact */}
      <div class="text-center bg-white p-6 border border-gray-200 rounded-lg shadow-sm">
        <h2 class="text-2xl font-semibold mb-3 text-gray-700">Connect on Facebook</h2>
        <p class="text-gray-600 mb-4">
          Join our community, get the latest updates, and engage with our content on our official Facebook page.
        </p>
        <a
          href={facebookPageUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-6 py-3 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 transition duration-200 ease-in-out shadow hover:shadow-md"
        >
          Visit CoverageNepal on Facebook
          {/* Optional: Add Facebook Icon SVG here */}
          {/* <svg>...</svg> */}
        </a>
      </div>

      {/* WhatsApp Contact */}
      <div class="text-center bg-white p-6 border border-gray-200 rounded-lg shadow-sm">
        <h2 class="text-2xl font-semibold mb-3 text-gray-700">Chat on WhatsApp</h2>
        <p class="text-gray-600 mb-4">
          For direct inquiries or quick questions, you can reach us via WhatsApp.
        </p>
        <a
          href={whatsappLink}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-6 py-3 bg-green-500 text-white font-medium rounded-md hover:bg-green-600 transition duration-200 ease-in-out shadow hover:shadow-md"
        >
          Message us on WhatsApp
           {/* Optional: Add WhatsApp Icon SVG here */}
           {/* <svg>...</svg> */}
        </a>
         <p class="text-sm text-gray-500 mt-3">(Number: +{whatsappNumber.slice(0,3)} {whatsappNumber.slice(3)})</p> {/* Display number nicely */}
      </div>

    </div> {/* End Contact Methods Section */}

    <p class="text-center text-gray-600 mt-12">
      We appreciate your interest and look forward to connecting with you!
    </p>

  </div>

</BaseLayout>